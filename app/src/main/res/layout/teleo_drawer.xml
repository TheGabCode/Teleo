<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4C49"
    android:paddingTop="40dp"
    app:headerLayout="@layout/nav_header_home">
    <LinearLayout
        android:id="@+id/teleoDrawerHeader"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/userFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text=""/>
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/teleoDrawerSubgroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:background="@drawable/border_bottom"
        >
        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Region"/>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Notification"/>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="History"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teleoDrawerSubgroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"

        android:paddingBottom="10dp"
        android:background="@drawable/border_bottom"
        >
        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Home"/>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_mandeleitv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Mandelei TV"/>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_microsites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Microsites"/>
        </LinearLayout>
        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Trending Now!"/>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Schedule"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teleoDrawerSubgroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"

        android:paddingBottom="10dp"

        >
        <LinearLayout
            android:paddingStart="20dp"
            android:onClick="onClick"
            android:id="@+id/nav_skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Viewing Skins"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_1940"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="1940's"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_1950"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="1950's"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_1960"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="1960's"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_1970"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="1970's"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_1980"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="1980's"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_1990"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="1990's"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewing_skin_modern"
            android:onClick="onClick"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Modern"/>
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>


